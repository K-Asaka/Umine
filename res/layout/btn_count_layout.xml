<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/caputure"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/countBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="118dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <!--
     <Button
        android:id="@+id/countBtn"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:text="@string/umai" />
    -->

    <!--
      <Button
        android:id="@+id/tweet"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/twitter" />
    -->

    <ImageButton
        android:id="@+id/tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/destroy"
        android:layout_centerHorizontal="true"
        android:fadingEdge="none"
        android:src="@drawable/btn_tweet" />

    <ImageButton
        android:id="@+id/destroy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tweet"
        android:layout_alignParentBottom="true"
        android:src="@drawable/kaijyo" />

    <EditText
        android:id="@+id/twtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tweet"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="コメント入力"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/shopName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/twtext"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="店名"
        android:inputType="text" />

    <ImageButton
        android:id="@+id/countBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shopName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:src="@drawable/umais_button" />

</RelativeLayout>